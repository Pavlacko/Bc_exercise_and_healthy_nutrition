@{
    ViewData["Title"] = "Štatistiky";
}

<h2 class="page-title">Štatistiky</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card-custom">
            <h4>Dnešný súhrn</h4>

            <div class="kpi-grid mt-3">
                <div class="kpi-item">
                    <div class="kpi-label">Kcal</div>
                    <div class="kpi-value" id="todayKcal">0</div>
                </div>
                <div class="kpi-item">
                    <div class="kpi-label">P (g)</div>
                    <div class="kpi-value" id="todayP">0</div>
                </div>
                <div class="kpi-item">
                    <div class="kpi-label">C (g)</div>
                    <div class="kpi-value" id="todayC">0</div>
                </div>
                <div class="kpi-item">
                    <div class="kpi-label">F (g)</div>
                    <div class="kpi-value" id="todayF">0</div>
                </div>
            </div>

            <div class="card-custom mt-3" id="goalBox" style="display:none;">
                <h5>Denný cieľ</h5>
                <div>Kcal: <strong id="gKcal"></strong> (<span id="pKcal"></span>%)</div>
                <div>P: <strong id="gP"></strong> g (<span id="pP"></span>%)</div>
                <div>C: <strong id="gC"></strong> g (<span id="pC"></span>%)</div>
                <div>F: <strong id="gF"></strong> g (<span id="pF"></span>%)</div>
            </div>

            <div class="text-muted mt-2" id="goalMissing" style="display:none;">
                Denný cieľ zatiaľ nie je nastavený.
            </div>

            <div class="mt-2 small-help">
                Počet položiek: <strong id="todayCount">0</strong>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card-custom">
            <h4>Kalórie posledných 7 dní</h4>
            <canvas id="weeklyCanvas" height="180"></canvas>
            <div class="small-help mt-2" id="weeklyHint"></div>
        </div>
    </div>
</div>

<hr />

@section Scripts {
    <script src="~/js/stats.js"></script>
}

