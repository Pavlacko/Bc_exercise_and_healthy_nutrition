@model IEnumerable<Bc_exercise_and_healthy_nutrition.Models.FoodItem>

@{
    ViewData["Title"] = "Databáza jedla";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title mb-0">Databáza jedál</h2>

    <a class="btn btn-main"
       asp-controller="Food"
       asp-action="Create">
        + Pridať jedlo
    </a>
</div>

<div class="card-custom">
    <div class="table-responsive">
        <table class="table table-card align-middle">
            <thead>
                <tr>
                    <th>Názov</th>
                    <th style="width:120px;">kcal/100g</th>
                    <th style="width:110px;">P/100g</th>
                    <th style="width:110px;">C/100g</th>
                    <th style="width:110px;">F/100g</th>
                    <th style="width:180px;" class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td class="fw-600">@f.Name</td>
                        <td>@f.KcalPer100g</td>
                        <td>@f.ProteinPer100g</td>
                        <td>@f.CarbsPer100g</td>
                        <td>@f.FatPer100g</td>
                        <td class="text-end" style="white-space:nowrap;">
                            <a class="btn btn-sm btn-outline-main"
                               asp-controller="Food"
                               asp-action="Edit"
                               asp-route-id="@f.Id">
                                Upraviť
                            </a>

                            <a class="btn btn-sm btn-outline-danger"
                               asp-controller="Food"
                               asp-action="Delete"
                               asp-route-id="@f.Id">
                                Zmazať
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>