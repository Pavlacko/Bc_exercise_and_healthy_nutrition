@model Bc_exercise_and_healthy_nutrition.Models.FoodItem

@{
    ViewData["Title"] = "Zmazať jedlo";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title mb-0">Zmazať jedlo</h2>

    <a class="btn btn-sm btn-outline-main" asp-controller="Food" asp-action="Index">← Späť</a>
</div>

<div class="card-custom">
    <div class="alert-custom alert-error mb-3">
        Naozaj chceš zmazať toto jedlo? Táto akcia je nevratná.
    </div>

    <div class="row g-3">
        <div class="col-12">
            <div class="kv">
                <div class="k">Názov</div>
                <div class="v fw-600">@Model.Name</div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-3">
            <div class="kv">
                <div class="k">kcal / 100g</div>
                <div class="v">@Model.KcalPer100g</div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-3">
            <div class="kv">
                <div class="k">P / 100g</div>
                <div class="v">@Model.ProteinPer100g</div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-3">
            <div class="kv">
                <div class="k">C / 100g</div>
                <div class="v">@Model.CarbsPer100g</div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-3">
            <div class="kv">
                <div class="k">F / 100g</div>
                <div class="v">@Model.FatPer100g</div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4 d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger-soft">Áno, zmazať</button>
        <a class="btn btn-outline-main" asp-controller="Food" asp-action="Index">Nie, späť</a>
    </form>
</div>